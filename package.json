{
  "name": "refine-sql",
  "description": "Multi-runtime SQL data provider for Refine - Supports Cloudflare D1, Node.js 22.5+ native SQLite, and Bun 1.2+ native SQLite with zero bundle overhead",
  "version": "0.2.2",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "sideEffects": false,
  "types": "dist/index.d.ts",
  "author": "zuohuadong",
  "keywords": [
    "refine",
    "data provider",
    "sql",
    "sqlite",
    "cloudflare",
    "d1",
    "database",
    "edge",
    "workers",
    "nodejs",
    "bun",
    "multi-runtime",
    "native"
  ],
  "private": false,
  "files": [
    "dist",
    "README.md",
    "LICENSE.md",
    "CHANGELOG.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zuohuadong/refine-sql.git"
  },
  "bugs": {
    "url": "https://github.com/zuohuadong/refine-sql/issues"
  },
  "homepage": "https://github.com/zuohuadong/refine-sql#readme",
  "publishConfig": {
    "access": "public"
  },
  "funding": [
    {
      "type": "github",
      "url": "https://github.com/sponsors/zuohuadong"
    }
  ],
  "scripts": {
    "start": "wrangler dev",
    "build": "rslib build",
    "build:esm": "rslib build --format esm",
    "build:cjs": "rslib build --format cjs",
    "build:dual": "rslib build",
    "build:watch": "rslib build --watch",
    "analyze": "node bundle-size-analysis.js",
    "test": "vitest --run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:run": "node scripts/test.js",
    "test:run:legacy": "vitest run",
    "test:integration": "node --experimental-sqlite integration-test.js",
    "prepare": "npm run build",
    "deploy": "wrangler deploy",
    "prepublishOnly": "npm run test:run && npm run build",
    "build:all": "npm run build --workspaces --if-present",
    "test:all": "npm run test --workspaces --if-present",
    "publish:all": "npm run build:all && npm publish --workspaces --access public"
  },
  "peerDependencies": {
    "@refinedev/core": "^4.0.0"
  },
  "peerDependenciesMeta": {
    "@refinedev/core": {
      "optional": true
    }
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250703.0",
    "@microsoft/api-extractor": "^7.52.8",
    "@refinedev/core": "^4.57.9",
    "@rslib/core": "^0.10.5",
    "@types/node": "^24.0.10",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4",
    "wrangler": "^4.23.0"
  }
}
