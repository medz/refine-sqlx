{
  "name": "refine-d1",
  "description": "Multi-runtime SQLite data provider for Refine - Supports Cloudflare D1, Node.js 22.5+ native SQLite, and Bun 1.2+ native SQLite with zero bundle overhead",
  "version": "2.0.0",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "sideEffects": false,
  "typings": "dist/index.d.ts",
  "author": "Mateus Abelli",
  "keywords": [
    "refine",
    "data provider",
    "cloudflare",
    "d1",
    "database",
    "edge",
    "workers",
    "sqlite",
    "nodejs",
    "bun",
    "multi-runtime",
    "native"
  ],
  "private": false,
  "files": [
    "dist",
    "README.md",
    "LICENSE.md",
    "CHANGELOG.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mateusabelli/refine-d1.git"
  },
  "bugs": {
    "url": "https://github.com/mateusabelli/refine-d1/issues"
  },
  "homepage": "https://github.com/mateusabelli/refine-d1#readme",
  "publishConfig": {
    "access": "public"
  },
  "funding": [
    {
      "type": "github",
      "url": "https://github.com/sponsors/mateusabelli"
    }
  ],
  "engines": {
    "node": ">=22.5"
  },
  "scripts": {
    "start": "wrangler dev",
    "build": "tsup --minify",
    "build:esm": "tsup --config tsup.esm-only.config.ts",
    "analyze": "node bundle-size-analysis.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:integration": "node --experimental-sqlite integration-test.js",
    "prepare": "npm run build",
    "deploy": "wrangler deploy",
    "prepublishOnly": "npm run test:run && npm run build"
  },
  "peerDependencies": {
    "@refinedev/core": "^4.0.0"
  },
  "peerDependenciesMeta": {
    "@refinedev/core": {
      "optional": true
    }
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250703.0",
    "@refinedev/core": "^4.57.9",
    "@types/node": "^24.0.10",
    "tslib": "^2.8.1",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4",
    "wrangler": "^4.23.0"
  }
}
